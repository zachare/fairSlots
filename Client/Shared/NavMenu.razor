@* Creates the NavMenu on the side of the page with hyperlinks to pages *@
@* Only displays icons of pages that the User is authorized to view *@
<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </div>
        <AuthorizeView Roles="Admin, Manager, User">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="gamehistory">
                <span class="oi oi-clock" aria-hidden="true"></span> Game History
            </NavLink>
        </div>
        </AuthorizeView>
        <AuthorizeView Roles="Admin, Manager, User">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="players">
                <span class="oi oi-people" aria-hidden="true"></span> Players
            </NavLink>
        </div>
        </AuthorizeView>
        <AuthorizeView Roles="Admin, Manager">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="chances">
                <span class="oi oi-graph" aria-hidden="true"></span> Chances
            </NavLink>
        </div>
        </AuthorizeView>
        <AuthorizeView Roles="Admin, Manager">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="funds">
                <span class="oi oi-dollar" aria-hidden="true"></span> Add Funds
            </NavLink>
        </div>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
