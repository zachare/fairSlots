@* Used for testing purposes *@
@page "/counter"
@using fairSlots.Server.Data
<PageTitle>Counter</PageTitle>
<Animation AnimationSelected="@selectedAnimation">
    <h1 style="color:white;">Counter</h1>

    <p style="color:white" role="status">Current count: @currentCount</p>

    <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
</Animation>

@code {
    private int currentCount = 0;

    public string selectedAnimation = "";
    protected override void OnInitialized()
    {
        // Change the transition here
        selectedAnimation = Animations.slideDown;
    }

    private void IncrementCount()
    {
        currentCount++;
    }
}
