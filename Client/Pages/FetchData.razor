@page "/fetchdata"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using fairSlots.Shared.Models
@attribute [Authorize]
@inject HttpClient Http

<PageTitle>Game History</PageTitle>

<h1>Game History</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (histories == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Game Number</th>
                <th>Funds</th>
                <th>Bet Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var history in histories)
            {
                <tr>
                    <td>@history.Date.ToShortDateString()</td>
                    <td>@history.GameNumber</td>
                    <td>$@history.Funds</td>
                    <td>$@history.BetAmount</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private GameHistory[]? histories;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            histories = await Http.GetFromJsonAsync<GameHistory[]>("GameHistory");
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }
    }
}
